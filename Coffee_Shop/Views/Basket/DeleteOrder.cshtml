@model Order

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Document</title>
</head>
<body>
<form  asp-action="DeleteOrder" method="post" >

    <div class="container">
        <div class="contact-box">
            <div class="left"></div>
            <div class="right">
                <h2>Contact Us</h2>
                <input asp-for="@Model.Product.Name" class="field" placeholder="Name of Product">
                <input  asp-for="@Model.Product.Description"  class="field" placeholder="Description">
                <input  asp-for="@Model.Product.Price"  class="field" placeholder="Price"  >
                    


                <button class="btn" type="submit">Delete</button>

            </div>
        </div>
    </div>
</form>
</body>
</html>